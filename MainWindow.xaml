<Window x:Class="KeyboardTrainer.MainWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="Keyboard Trainer"
        
        
        WindowStartupLocation="CenterScreen" KeyUp="Window_KeyUp" KeyDown="Window_KeyDown">

    <Grid x:Name="Grid">
        <Grid.ContextMenu>
            <ContextMenu x:Name="contextMenuColors">
                <MenuItem Click="SpecialCharsColor" Header="Change special chars color"></MenuItem>
                <MenuItem Click="AlphabetCharsColor" Header="Change alphabet chars color"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="299*"/>
            <ColumnDefinition Width="451*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="2,2,2,2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock FontSize="15" Text="Speed: "/>
                <TextBlock x:Name="SpeedText" FontSize="15" FontWeight="Bold" Text="0"/>
                <TextBlock FontSize="15" Text=" chars/min"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Width="164">
                <TextBlock FontSize="15" Text="Fails: "/>
                <TextBlock  x:Name="Fails" FontSize="15" FontWeight="Bold" Text="0"/>
            </StackPanel>
            <Grid Grid.Column="1" Grid.ColumnSpan="3" Margin="103,0,192,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock FontSize="15" Text="Difficulty: " Width="76"/>
                    <TextBlock x:Name="DifficultTextBlock" FontSize="15" FontWeight="Bold" Text="0"/>
                </StackPanel>
                <Slider x:Name="Difficult" Value="10" Grid.Column="1" Margin="10,0,95,0" VerticalAlignment="Center" ValueChanged="Difficult_ValueChanged" Maximum="52" Minimum="1"/>
            </Grid>
            <Grid Grid.Column="3" Margin="10,0,0,0">
                <CheckBox x:Name="CaseSensetive" FontSize="15" VerticalContentAlignment="Center" Margin="150,0,0,0">Case Sensitive</CheckBox>
                <CheckBox x:Name="SpecialChars" FontSize="15" VerticalContentAlignment="Center"  Margin="13,0,138,0">Special chars</CheckBox>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="2,2,2,2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="StartButton" Grid.Column="0" Click="Button_Click" Margin="102,0,135,0" Grid.ColumnSpan="2">Start</Button>
                <Button x:Name="StopButton" Grid.Column="1" Margin="56,0,0,0" Click="StopButton_Click">Stop</Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="2,2,2,2" Grid.ColumnSpan="2">
            <StackPanel>
                <StackPanel Background="LightBlue" Orientation="Horizontal" Height="25">
                    <TextBox  AcceptsReturn="True" TextWrapping="Wrap" x:Name="GenerateText" Background="LightBlue" BorderBrush="Transparent" FontFamily="Consolas" FontSize="20"  />

